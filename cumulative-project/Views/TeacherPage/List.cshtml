@model List<cumulative1.Models.Teacher>

@{
    ViewData["Title"] = "Teachers List";
}
<h1>Teachers List</h1>

<div class="add-button">
    <a href="/TeacherPage/New">Add new teacher</a>
</div>

<form action="/TeacherPage/List" method="GET">
    <div>
        <input type="text" name="SearchKey" placeholder="Search by name"/>
        <input type="submit" value="Search"/>
    </div>
</form>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>
                    <a href="@Url.Action("Show", new { id = teacher.TeacherID })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 800px;
        margin-top: 20px;
    }

    h1 {
        margin-top: 20px;
    }

    .add-button {
        margin-top:20px;
        margin-bottom: 20px;
    }

    .add-button a {
        text-decoration:none;
        padding:10px 20px;
        background: blue;
        color:white;
        border:1px solid blue;
    }

    th, td {
        border: 1px solid;
        padding: 4px;
        text-align: left;
    }

    th {
        color: white;
        background-color: black;
    }
</style>
